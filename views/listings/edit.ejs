
<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit: <%=listing.title%></h3>
            <form action="/listings/<%=listing.id%>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter title" type="text" value="<%=listing.title%>" class="form-control" id="title" required>
                    <div class="invalid-feedback">Please enter title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" cols="50" rows="8" id="description" class="form-control" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Please enter description</div>
                </div>
                <div class="mb-3">
                    <img src="<%=originalImageUrl%>" alt="" height="200px" width="320px">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="listing[image]" placeholder="enter image URL/link" type="file" value="<%=listing.image%>" class="form-control" id="image">
                    <div class="invalid-feedback">Please enter image url</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="enter price" type="number" value="<%=listing.price%>" class="form-control" id="image" required>
                        <div class="invalid-feedback">Please enter price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="enter country" type="text" value="<%=listing.country%>" class="form-control" id="country" required>
                        <div class="invalid-feedback">Please enter country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" value="<%=listing.location%>" class="form-control" id="location" required>
                    <div class="invalid-feedback">Please enter location</div>
                </div>
                
                <button class="btn btn-warning mb-3">Save</button>
            </form>
        </div>
    </div>
</body>
